<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:dividerThickness="10dp"
        app:dividerColor="#D1D1D1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        android:translationZ="2dp"
        app:strokeWidth="0.2dp"
        app:strokeColor="@color/back_button"
        android:focusable="true">


        <!--
            android:elevation="1dp"
            android:translationZ="3dp"
         -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/post_owner_pic"
                        android:background="@drawable/profile_pic_shimmer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:civ_border_color="#FFFFFF"
                        android:layout_weight="1"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        android:clickable="true"
                        app:civ_shadow_radius="0.5dp"
                        app:civ_shadow_color="#3f51b5"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@color/gray"
                            android:layout_marginLeft="15dp"
                            android:textSize="15dp"
                            android:textColor="#48464A"
                            android:clickable="true"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/subject"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:background="@color/gray"
                                android:textSize="13dp"
                                android:textColor="#48464A"
                                android:textAppearance="?attr/textAppearanceBody2"
                                />

                            <TextView
                                android:id="@+id/post_time"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@color/gray"
                                android:textSize="13dp"
                                android:textColor="#48464A"
                                android:textAppearance="?attr/textAppearanceBody2"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/chip"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:textSize="13dp"
                        android:textColor="#48464A"
                        android:textAppearance="?attr/textAppearanceBody2"
                        />
                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="3"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/text1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@color/gray"
                       android:layout_weight="1"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="10dp"
                       android:textSize="13sp"
                       android:textColor="#48464A"
                       android:textAppearance="?attr/textAppearanceBody2"/>

                   <TextView
                       android:id="@+id/text2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@color/gray"
                       android:layout_weight="1"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:textSize="13dp"
                       android:textColor="#48464A"
                       android:textAppearance="?attr/textAppearanceBody2"/>

                   <TextView
                       android:id="@+id/text3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@color/gray"
                       android:layout_marginTop="10dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="10dp"
                       android:textSize="13dp"
                       android:textColor="#48464A"
                       android:textAppearance="?attr/textAppearanceBody2"/>



               </LinearLayout>



            </LinearLayout>
            <!-- Media -->
            <ImageView
                android:id="@+id/post_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/gray"
                android:scaleType="fitXY"
                android:clickable="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_media"
                />



            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:dividerThickness="0.8dp"
                app:dividerColor="#B6B4B4" />


            <!-- Buttons -->




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chip1"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:textColor="#48464A"
                    android:textAppearance="?attr/textAppearanceBody2"
                    />
                <TextView
                    android:id="@+id/chip2"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="#48464A"
                    android:textAppearance="?attr/textAppearanceBody2"
                    />
                <TextView
                    android:id="@+id/chip3"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:background="@color/gray"
                    android:textSize="13dp"
                    android:textColor="#48464A"
                    android:textAppearance="?attr/textAppearanceBody2"
                    />
            </LinearLayout>





        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>