<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    tools:context=".post">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:liftOnScroll="false">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Notify"
            android:textAlignment="center"
            app:navigationIcon="@drawable/back_arrow_icon"
            app:title="@string/post_audience"
            app:titleMarginTop="0dp"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.MdcTypographyStyles.Headline5"
            app:titleTextColor="#FFFFFF"
            android:gravity="center_horizontal">

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/who_can_see_post"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="80dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_answer"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
     <FrameLayout
         android:layout_width="370dp"
         android:layout_height="300dp"
         android:layout_marginTop="30dp"
         android:layout_gravity="center">


         <com.google.android.material.card.MaterialCardView
             android:layout_width="150dp"
             android:layout_height="40dp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="5dp"
             android:translationZ="3dp"
             app:cardBackgroundColor="#CDE0F9"
             app:cardCornerRadius="4dp"
             app:cardElevation="-0.9dp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="@string/audience_txt"
                 android:textColor="#504E4E"
                 android:textSize="20sp"
                 android:textStyle="bold" />


         </com.google.android.material.card.MaterialCardView>


     </FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Add Audience"
            android:textAllCaps="false"
            android:textColor="#504E4E"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:icon="@drawable/plus_icon"
            app:iconGravity="textStart"
            app:iconSize="15dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/done_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="#726EE3"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"
            android:text="Done"/>

</LinearLayout>

    </LinearLayout>






</androidx.coordinatorlayout.widget.CoordinatorLayout>