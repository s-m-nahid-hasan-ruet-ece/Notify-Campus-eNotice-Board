<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_post"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    tools:context=".post">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:liftOnScroll="false">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Notify"
            android:textAlignment="center"
            app:navigationIcon="@drawable/back_arrow_icon"
            app:title="@string/add_audience"
            app:titleMarginTop="0dp"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.MdcTypographyStyles.Headline5"
            app:titleTextColor="#FFFFFF"
            android:gravity="center_horizontal">

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subjet_txt_hint"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_sub_answer"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/faculty"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            app:boxStrokeWidth="10dp"
            app:boxStrokeColor="@color/purple_500"
            app:boxStrokeErrorColor="#E82F2F"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/black"
            android:hint="@string/faculty_hint"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20989898"
                app:menu="@menu/audience_faculty_selection_menu"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dept"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:boxStrokeWidth="10dp"
            app:boxStrokeColor="@color/purple_500"
            app:boxStrokeErrorColor="#E82F2F"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/black"
            android:hint="@string/dept_hint"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20989898"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/series"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:boxStrokeWidth="10dp"
            app:boxStrokeColor="@color/purple_500"
            app:boxStrokeErrorColor="#E82F2F"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/black"
            android:hint="@string/series_hint"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20989898"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/section"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:boxStrokeWidth="10dp"
            app:boxStrokeColor="@color/purple_500"
            app:boxStrokeErrorColor="#E82F2F"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/black"
            android:hint="@string/section_hint"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20989898"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Roll"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/hint"
                android:layout_marginStart="20dp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTextField"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                app:boxStrokeColor="@color/purple_500"
                app:boxStrokeErrorColor="#E82F2F"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                android:hint="All"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/post_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint"
                    android:gravity="left"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="To"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/hint"
                android:layout_marginStart="10dp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTextFieldupper"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:boxStrokeColor="@color/purple_500"
                app:boxStrokeErrorColor="#E82F2F"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_marginRight="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upperroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="All"
                    android:textColor="@color/hint"
                    android:gravity="left"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <Button
            android:id="@+id/add_audience_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Add Audience"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:layout_marginBottom="30dp"
            android:background="@drawable/done_button_shape"
            android:backgroundTint="@color/purple_500"
            />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>




