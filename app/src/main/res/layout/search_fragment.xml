<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title, secondary and supporting text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="18"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/photo_video_btn"
                    android:layout_marginTop="5dp"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="-10dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    app:icon="@drawable/back_arrow_icon"
                    app:iconTint="#454545"
                    app:iconTintMode="multiply"
                    android:focusable="true" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:hint="@string/Search"
                            android:textAllCaps="false"
                            android:textColorHint="#787575"
                            android:textColor="#787575"
                            android:textSize="15dp"
                            android:background="@drawable/search_background"
                            android:id="@+id/edit_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="19"
                            android:textAlignment="viewStart"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="start"
                            android:layout_marginStart="10dp"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:dividerThickness="0.9dp"
            app:dividerColor="#B6B4B4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trySearch"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subject"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noticeText"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>

</LinearLayout>